<.header>
  Listing Test pages
  <:actions>
    <.link href={~p"/test_pages/new"}>
      <.button>New Test page</.button>
    </.link>
  </:actions>
</.header>

<.table id="test_pages" rows={@test_pages} row_click={&JS.navigate(~p"/test_pages/#{&1}")}>
  <:col :let={test_page} label="Test">{test_page.test}</:col>
  <:action :let={test_page}>
    <div class="sr-only">
      <.link navigate={~p"/test_pages/#{test_page}"}>Show</.link>
    </div>
    <.link navigate={~p"/test_pages/#{test_page}/edit"}>Edit</.link>
  </:action>
  <:action :let={test_page}>
    <.link href={~p"/test_pages/#{test_page}"} method="delete" data-confirm="Are you sure?">
      Delete
    </.link>
  </:action>
</.table>
